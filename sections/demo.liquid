<div class="page-width p-5">
  <h1>{{ section.settings.maintitle }}</h1>
  {% for var in section.blocks %}
  <div class="card" style="width: 18rem;">
    <img src="{{ var.settings.imgtag | image_url }}" class="card-img-top" alt="..." width="" height="">
    <div class="card-body">
      <h5 class="card-title">{{ var.settings.title }}</h5>
      <p class="card-text">{{ var.settings.subtitle }}</p>
      <a href="{{ var.settings.btnurl }}" class="btn btn-primary">{{ var.settings.btn }}</a>
    </div>
  </div>
  {% endfor %}
</div>

{% schema %}
{
  "name": "demo 1",
  "settings": [
    {
          "type": "text",
          "id": "maintitle",
          "label": "Title Here"
        }
  ],
  "blocks": [
    {
      "name": "Cards",
      "limit": 2,
      "type": "select",
      "settings": [
        {
          "type": "image_picker",
          "id": "imgtag",
          "label": "Upload Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title Here"
        },
        {
          "type": "textarea",
          "id": "subtitle",
          "label": "Sub Title Here"
        },
        {
          "type": "url",
          "id": "btnurl",
          "label": "Button URL"
        },
        {
          "type": "text",
          "id": "btn",
          "label": "Button Label",
          "default": "Read More"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "demo"
    }
  ]
}
{% endschema %}
